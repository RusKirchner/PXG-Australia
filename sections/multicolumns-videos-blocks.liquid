{% schema %}
{
  "name": "Multi-Column Video Blocks",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "background-1"
    }
  ],
  "blocks": [
    {
      "type": "video_block",
      "name": "Video Block",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Text"
        },
        {
          "type": "select",
          "id": "video_type",
          "label": "Video Type",
          "options": [
            {
              "value": "youtube",
              "label": "YouTube"
            },
            {
              "value": "vimeo",
              "label": "Vimeo"
            },
            {
              "value": "self_hosted",
              "label": "Self-Hosted"
            }
          ],
          "default": "youtube"
        },
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Multi-Column Video Blocks",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="multi-column-video-blocks {{ section.settings.color_scheme }}">
  <div class="grid">
    {% for block in section.blocks %}
    <div class="grid__item medium-up--one-third">
      <div class="video-block">
        <h3>{{ block.settings.title }}</h3>
        <div class="video-wrapper">
          {% if block.settings.video_type == 'youtube' %}
            <iframe src="https://www.youtube.com/embed/{{ block.settings.video_url | split: 'v=' | last }}" frameborder="0" allowfullscreen></iframe>
          {% elsif block.settings.video_type == 'vimeo' %}
            <iframe src="https://player.vimeo.com/video/{{ block.settings.video_url | split: '/' | last }}" frameborder="0" allowfullscreen></iframe>
          {% elsif block.settings.video_type == 'self_hosted' %}
            <video controls>
              <source src="{{ block.settings.video_url }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          {% endif %}
        </div>
        <p>{{ block.settings.description }}</p>
        {% if block.settings.button_text %}
        <a href="{{ block.settings.button_url }}" class="btn">{{ block.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>
    {% endfor %}
  </div>
</div>

<style>
.multi-column-video-blocks .grid {
  display: flex;
  flex-wrap: wrap;
}

.multi-column-video-blocks .grid__item {
  padding: 15px;
}

.multi-column-video-blocks .video-wrapper {
  position: relative;
  padding-bottom: 56.25%; /* 16:9 aspect ratio */
  height: 0;
  overflow: hidden;
}

.multi-column-video-blocks .video-wrapper iframe,
.multi-column-video-blocks .video-wrapper video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
</style>
