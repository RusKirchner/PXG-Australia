        "options": [
          {
            "value": "active1",
            "label": "Active 1"
          },
          {
            "value": "active2",
            "label": "active 2"
          },
          {
            "value": "active3",
            "label": "Active 3"
          },
          {
            "value": "active4",
            "label": "Active 4"
          }
        ],
        "default": "active1"
      },

      {
        "type": "text",
        "label": "Comparison indicator heading 1",
        "id": "comp-ind-head1"
      },
       {
        "type": "text",
        "label": "Comparison indicator heading 2",
        "id": "comp-ind-head2"
      },
       {
        "type": "checkbox",
        "label": "Indicator layer 2",
        "id": "indicator_layer2"
      },
      {
        "type": "text",
        "label": "Indicator title",
        "id": "indi_title2"
      },
      {
        "type": "select",
        "id": "active_indicator2",
        "label": "Active indicator layer 2",
        "options": [
          {
            "value": "layer2_active1",
            "label": "Active 1"
          },
          {
            "value": "layer2_active2",
            "label": "active 2"
          },
          {
            "value": "layer2_active3",
            "label": "Active 3"
          },
          {
            "value": "layer2_active4",
            "label": "Active 4"
          }
        ],
        "default": "layer2_active1"
      },
      {
        "type": "text",
        "label": "Comparison indicator heading 1",
        "id": "compindl-lyr2-head1"
      },
       {
        "type": "text",
        "label": "Comparison indicator heading 2",
        "id": "compindl-lyr2-head2"
      },
      {
        "type": "checkbox",
        "label": "Indicator layer 3",
        "id": "indicator_layer3"
      },
      {
        "type": "text",
        "label": "Indicator title",
        "id": "indi_title3"
      },    
      {
        "type": "select",
        "id": "active_indicator3",
        "label": "Active indicator layer 3",
        "options": [
          {
            "value": "layer3_active1",
            "label": "Active 1"
          },
          {
            "value": "layer3_active2",
            "label": "Active 2"
          },
          {
            "value": "layer3_active3",
            "label": "Active 3"
          },
          {
            "value": "layer3_active4",
            "label": "Active 4"
          }
        ],
        "default": "layer3_active1"
      },
       {
        "type": "text",
        "label": "Comparison indicator heading 1",
        "id": "compindl-lyr3-head1"
      },
       {
        "type": "text",
        "label": "Comparison indicator heading 2",
        "id": "compindl-lyr3-head2"
      },
      {
        "type": "richtext",
        "label": "Model content",
        "id": "model_content"
      },
      {
        "type": "text",
        "label": "Button text",
        "id": "btn_text"
      },
      {
        "type": "url",
        "label": "Button url",
        "id": "btn_url"
      }
    ]
  }
],
  "presets": [
    {
      "name": "Model Comparison"
    }
  ]
}
{% endschema %}
