{% schema %}
{
  "name": "Single Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "custom_image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Alt text",
      "default": "Default alt text"
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image Width (in %)",
      "default": 100,
      "min": 10,
      "max": 100,
      "unit": "%"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Single Image",
      "category": "Image"
    }
  ]
}
{% endschema %}

<section class="custom-image-section" 
  style="padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px">
  <div class="page-width">
    <div class="custom-image-container" style="max-width: {{ section.settings.image_width }}%;">
    <img src="{{ section.settings.custom_image | image_url }}" alt="{{ section.settings.alt_text }}">
    </div>
  </div>
</section>

<style>
  .custom-image-container {
    text-align: center;
    margin: 0 auto;
  }

  .custom-image-container img {
    width: 100%;
    height: auto;
  }
</style>
