{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{{ 'section-testimonials.css' | asset_url | stylesheet_tag }}
<div class="isolate color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
	<div class="testimonials page-width page-width--narrow">
    {%- if section.blocks.size > 1 -%}
      {%- render 'section-heading', show_desktop_slider: true, show_tablet_slider: true, show_mobile_slider: true -%}
    {%- else -%}
      {%- render 'section-heading' -%}
    {%- endif -%}
		<slider-component class="por slider-mobile-gutter slider-component-desktop slider-component-tablet slider-component-mobile" data-outside-prev-button-id="Slider-{{ section.id }}-prev-button" data-outside-next-button-id="Slider-{{ section.id }}-next-button">
			<ul id="Slider-{{ section.id }}" class="grid product-grid contains-card grid--1-col slider slider--desktop slider--tablet slider--mobile" role="list">
				{%- for block in section.blocks -%}
					<li id="Slide-{{ section.id }}-{{ forloop.index }}" class="grid__item slider__slide">
						<div class="testimonial text-center color-{{ section.settings.quote_color_scheme }}">
              <h3 class="font-heading-bold margin0">{{ block.settings.title }}</h3>
              <div class="testimonial__text light">{{ block.settings.content }}</div>
              {%- render 'icon-quote', add_classes: 'testimonial__quote testimonial__quote--in-content small-hide' -%}
              <div class="testimonial__user flex flex-column justify-center">
                {%- if block.settings.avatar != blank -%}
                  <div class="testimonial__avatar">
                    <div class="media media--circle">
                      {{ block.settings.avatar | image_url: width: 100 | image_tag:
                        loading: 'lazy',
                        width: 100,
                        height: 100
                      }}
                    </div>
                  </div>  
                {%- endif -%}
                {%- render 'icon-quote', add_classes: 'testimonial__quote testimonial__quote--in-user small-hide' -%}
                <div class="testimonial__user_full_name{% if block.settings.avatar != blank %} margin-top-1rem{% endif %}">{{ block.settings.user_full_name }}</div>
                <span class="testimonial__user_title caption light">{{ block.settings.user_title }}</span>	
              </div>
						</div>
					</li>
				{%- endfor -%}
			</ul>
      {%- if section.blocks.size > 1 and section.settings.title == blank -%}
        {%- render 'slider-controls', wrapper_classes: 'slider-buttons--box element-small-margin-top', suffix_id: section.id, total_items: section.blocks.size -%}
      {%- endif -%}
		</slider-component>
	</div>	
</div>
{% schema %}
{
  "name": "t:sections.testimonials.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "What clients say",
      "label": "t:sections.testimonials.settings.title.label"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "t:sections.testimonials.settings.subtitle.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "color_scheme",
      "id": "quote_color_scheme",
      "default": "background-2",
      "label": "t:sections.testimonials.settings.quote_color_scheme.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "quote",
      "name": "t:sections.testimonials.blocks.quote.name",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.testimonials.blocks.quote.settings.title.label"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "t:sections.testimonials.blocks.quote.settings.content.label"
        },
        {
          "type": "header",
          "content": "t:sections.testimonials.blocks.quote.settings.user_header.content"
        },
        {
          "type": "text",
          "id": "user_full_name",
          "label": "t:sections.testimonials.blocks.quote.settings.user_full_name.label"
        },
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "t:sections.testimonials.blocks.quote.settings.avatar.label",
          "info": "t:sections.testimonials.blocks.quote.settings.avatar.info"
        },
        {
          "type": "text",
          "id": "user_title",
          "label": "t:sections.testimonials.blocks.quote.settings.user_title.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.testimonials.presets.name",
      "blocks": [
        {
          "type": "quote"
        }
      ]
    }
  ]
}
{% endschema %}