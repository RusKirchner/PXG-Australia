<!-- technology-benefits-blocks.liquid -->

{% schema %}
{
  "name": "Technology Benefits",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "PUTTER TECHNOLOGY THAT PERFORMS"
    },
    {
      "type": "text",
      "id": "header-heading-1",
      "label": "Top Heading 1",
      "default": "PUTTER TECHNOLOGY THAT PERFORMS"
    },
    {
      "type": "text",
      "id": "header-heading-2",
      "label": "Top Heading 2",
      "default": "PUTTER TECHNOLOGY THAT PERFORMS"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Section Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color_header",
      "label": "Header Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Section Text Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "text",
          "id": "block_heading",
          "label": "Block Heading",
          "default": "TECHNOLOGY"
        },
        {
          "type": "richtext",
          "id": "block_text",
          "label": "Block Text",
          "default": "<p>S-HOSEL\nShaft axis is positioned just above the CG, creating a toe-up balance point.</p>"
        },
        {
          "type": "image_picker",
          "id": "block_image",
          "label": "Block Image"
        },
        {
          "type": "color",
          "id": "block_background_color",
          "label": "Block Background Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "block_heading_color",
          "label": "Block Heading Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "block_text_color",
          "label": "Block Text Color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Technology Benefits Blocks",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}


<div style="background-color: {{ section.settings.background_color }}; padding: 40px 0;">
  <div class="page-width">
    <h2 style="text-align: center; color: {{ section.settings.heading_color }}; margin-bottom: 40px;">
      {{ section.settings.section_heading }}
    </h2>
    <div class="top-header" style="background-color: {{ section.settings.background_color_header }}">
      <h4 style="text-align: center; color: {{ section.settings.text_color }};">
      {{ section.settings.header-heading-1 }}</h4>
      <h4 style="text-align: center; color: {{ section.settings.text_color }};">
      {{ section.settings.header-heading-2 }}</h4>
    </div>
    <div class="blocks-container">
      {% for block in section.blocks %}
        {% if block.type == 'block' %}
          <div class="block-item" style="background-color: {{ block.settings.block_background_color }};">
            {% if block.settings.block_image %}
              <div class="block-image-wrapper">
                <img src="{{ block.settings.block_image | image_url }}" alt="{{ block.settings.block_heading }}" class="block-image">
              </div>
            {% endif %}
            <div class="block-content">
              <h3 style="color: {{ block.settings.block_heading_color }};">{{ block.settings.block_heading }}</h3>
              <p style="color: {{ block.settings.block_text_color }}; white-space: pre-wrap;">{{ block.settings.block_text }}</p>
            </div>
          </div>
        {% elsif block.type == 'text_block' %}
          <div class="text-block-item" style="background-color: {{ block.settings.text_block_background_color }};">
            <h3 style="color: {{ block.settings.text_block_heading_color }};">{{ block.settings.text_heading }}</h3>
            <p style="color: {{ block.settings.text_block_content_color }}; white-space: pre-wrap;">{{ block.settings.text_content }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
<style>
  .blocks-container {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .block-item {
    flex: 1 1 calc(33.333% - 20px);
    padding: 10px 20px;
    text-align: center;
    background-color: inherit;
    display: flex;
    align-items: center;
    justify-content: flex-start;
}
  .block-image-wrapper {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
  }
  .block-image {
    max-width: 100px;
  }
  .block-content {
    text-align: left; /* Adjust alignment if needed */
  }
  .text-block-item {
    flex: 1 1 calc(50% - 20px); /* Adjust for spacing */
    margin: 10px;
    padding: 20px;
    background-color: inherit;
    border: 1px solid #e1e1e1; /* Optional: for better visual separation */
  }
  .blocks-container {
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    row-gap: 10px;
  }

.block-item .block-image-wrapper {
    margin: 0;
}

.block-item p {
    margin: 0 0 4px;
}

.block-item .block-image-wrapper {
    display: block;
    text-align: center;
    width: 100%;
}
  @media (max-width: 768px) {
    .block-item {
      flex: 1 1 calc(50% - 20px); /* 2 blocks per row on tablets */
    }
    .text-block-item {
      flex: 1 1 100%; /* Full width on tablets */
    }
  }
  @media (max-width: 480px) {
    .block-item {
      flex: 1 1 100%; /* 1 block per row on mobile */
    }
    .text-block-item {
      flex: 1 1 100%; /* Full width on mobile */
    }
  }
</style>
{% endstylesheet %}

