<!-- putter-technology.liquid -->

{% schema %}
{
  "name": "Putter Technology",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "PUTTER TECHNOLOGY THAT PERFORMS"
    },
    {
      "type": "text",
      "id": "technology_heading",
      "label": "Technology Heading",
      "default": "TECHNOLOGY"
    },
    {
      "type": "textarea",
      "id": "technology_text",
      "label": "Technology Text",
      "default": "S-HOSEL\nShaft axis is positioned just above the CG, creating a toe-up balance point. Features a 5° loft with 2° forward press, playing at 3° of standard loft."
    },
    {
      "type": "image_picker",
      "id": "technology_image",
      "label": "Technology Image"
    },
    {
      "type": "text",
      "id": "player_benefits_heading",
      "label": "Player Benefits Heading",
      "default": "PLAYER BENEFITS"
    },
    {
      "type": "textarea",
      "id": "benefits_text",
      "label": "Player Benefits Text",
      "default": "STABILITY: Reduces twisting and enhances stability.\nPOSITIONING: Forward press helps position hands naturally."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Putter Technology",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<div style="background-color: {{ section.settings.background_color }}; padding: 40px 0;">
  <div class="container">
    <h2 style="text-align: center; color: {{ section.settings.heading_color }}; margin-bottom: 20px;">
      {{ section.settings.section_heading }}
    </h2>
    <div style="display: flex; justify-content: space-between; align-items: flex-start;">
      <!-- Technology Section -->
      <div style="flex: 1; text-align: center; padding-right: 20px;">
        <h3 style="color: {{ section.settings.heading_color }};">{{ section.settings.technology_heading }}</h3>
        <div style="margin: 20px 0;">
          <img src="{{ section.settings.technology_image | image_url }}" alt="Technology Image" style="max-width: 100%; margin: 0 auto;">
        </div>
        <p style="color: {{ section.settings.text_color }}; white-space: pre-wrap;">{{ section.settings.technology_text }}</p>
      </div>
      
      <!-- Player Benefits Section -->
      <div style="flex: 1; text-align: left; padding-left: 20px;">
        <h3 style="color: {{ section.settings.heading_color }};">{{ section.settings.player_benefits_heading }}</h3>
        <p style="color: {{ section.settings.text_color }}; white-space: pre-wrap;">{{ section.settings.benefits_text }}</p>
      </div>
    </div>
  </div>
</div>
