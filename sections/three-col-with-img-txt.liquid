<!-- technology-benefits-blocks.liquid -->

{% schema %}
{
  "name": "Technology Benefits",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "PUTTER TECHNOLOGY THAT PERFORMS"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "text",
          "id": "block_heading",
          "label": "Block Heading",
          "default": "TECHNOLOGY"
        },
        {
          "type": "textarea",
          "id": "block_text",
          "label": "Block Text",
          "default": "S-HOSEL\nShaft axis is positioned just above the CG, creating a toe-up balance point."
        },
        {
          "type": "image_picker",
          "id": "block_image",
          "label": "Block Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Technology Benefits Blocks",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<div style="background-color: {{ section.settings.background_color }}; padding: 40px 0;">
  <div class="container">
    <h2 style="text-align: center; color: {{ section.settings.heading_color }}; margin-bottom: 40px;">
      {{ section.settings.section_heading }}
    </h2>
    <div style="display: flex; justify-content: space-between;">
      {% for block in section.blocks %}
      <div style="flex: 1; text-align: center; margin: 0 10px;">
        {% if block.settings.block_image %}
        <img src="{{ block.settings.block_image | image_url }}" alt="{{ block.settings.block_heading }}" style="max-width: 100px; margin-bottom: 20px;">
        {% endif %}
        <h3 style="color: {{ section.settings.heading_color }};">{{ block.settings.block_heading }}</h3>
        <p style="color: {{ section.settings.text_color }}; white-space: pre-wrap;">{{ block.settings.block_text }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
<style>
  @media (max-width: 768px) {
    .container {
      display: block;
    }
    .container div {
      margin-bottom: 20px;
    }
  }
</style>
{% endstylesheet %}

{% javascript %}
<script>
  // Add any necessary JavaScript here (optional)
</script>
{% endjavascript %}
