<!-- technology-benefits-blocks.liquid -->

{% schema %}
{
  "name": "Technology Benefits",
  "settings": [
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "PUTTER TECHNOLOGY THAT PERFORMS"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Section Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Section Text Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Block",
      "settings": [
        {
          "type": "text",
          "id": "block_heading",
          "label": "Block Heading",
          "default": "TECHNOLOGY"
        },
        {
          "type": "textarea",
          "id": "block_text",
          "label": "Block Text",
          "default": "S-HOSEL\nShaft axis is positioned just above the CG, creating a toe-up balance point."
        },
        {
          "type": "image_picker",
          "id": "block_image",
          "label": "Block Image"
        },
        {
          "type": "color",
          "id": "block_background_color",
          "label": "Block Background Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "block_heading_color",
          "label": "Block Heading Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "block_text_color",
          "label": "Block Text Color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Technology Benefits Blocks",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

<div style="background-color: {{ section.settings.background_color }}; padding: 40px 0;">
  <div class="container">
    <h2 style="text-align: center; color: {{ section.settings.heading_color }}; margin-bottom: 40px;">
      {{ section.settings.section_heading }}
    </h2>
    <div class="blocks-container">
      {% for block in section.blocks %}
      <div class="block-item" style="background-color: {{ block.settings.block_background_color }};">
        {% if block.settings.block_image %}
        <div class="block-image-wrapper">
          <img src="{{ block.settings.block_image | image_url }}" alt="{{ block.settings.block_heading }}" class="block-image">
        </div>
        {% endif %}
        <div class="block-content">
          <h3 style="color: {{ block.settings.block_heading_color }};">{{ block.settings.block_heading }}</h3>
          <p style="color: {{ block.settings.block_text_color }}; white-space: pre-wrap;">{{ block.settings.block_text }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% stylesheet %}
<style>
  .blocks-container {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .block-item {
    flex: 1 1 calc(33.333% - 20px); /* 3 blocks per row with margin */
    margin: 10px;
    padding: 20px;
    text-align: center;
    background-color: inherit;
    border: 1px solid #e1e1e1; /* Optional: for better visual separation */
  }
  .block-image-wrapper {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
  }
  .block-image {
    max-width: 100px;
  }
  .block-content {
    text-align: left; /* Adjust alignment if needed */
  }

  @media (max-width: 768px) {
    .block-item {
      flex: 1 1 calc(50% - 20px); /* 2 blocks per row on tablets */
    }
  }
  
  @media (max-width: 480px) {
    .block-item {
      flex: 1 1 100%; /* 1 block per row on mobile */
    }
  }
</style>
{% endstylesheet %}

{% javascript %}
<script>
  // Add any necessary JavaScript here (optional)
</script>
{% endjavascript %}
